<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:padding="@dimen/margin_small">

    <ImageButton
        android:id="@+id/phone_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/call_drawable"
        android:padding="@dimen/margin_small"
        android:background="@drawable/bottom_button_layout_selector"/>

    <ImageButton
        android:id="@+id/mail_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mail_drawable"
        android:padding="@dimen/margin_small"
        android:background="@drawable/bottom_button_layout_selector"/>

    <ImageButton
        android:id="@+id/contact_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/contact_drawable"
        android:padding="@dimen/margin_small"
        android:background="@drawable/bottom_button_layout_selector"/>
</RelativeLayout>